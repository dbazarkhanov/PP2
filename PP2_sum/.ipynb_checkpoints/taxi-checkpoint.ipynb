   "source": [
    "cash = float(5)\n",
    "\n",
    "d = float(input())*1000\n",
    "\n",
    "for i in range(0, int(d)+1, 150):\n",
    "    if i == 0: continue\n",
    "    cash += 0.25\n",
    "    l = d-i\n",
    "\n",
    "if l != 0:\n",
    "    cash = cash + l*(25/150)/100\n",
    "    #print('check')\n",
    "\n",
    "print('{:.3f}'.format(cash))"
   ]
  }
